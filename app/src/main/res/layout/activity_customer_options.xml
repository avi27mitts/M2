<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer_options"
    android:background="@drawable/cbg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/imgcustomer_option"
                android:src="@drawable/customer_op"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/tv_cust_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/imgcustomer_option"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/cd1"
                android:id="@+id/co_btn_new"
                android:layout_below="@+id/tv_cust_name"
                android:layout_marginTop="25dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/cd2"
                android:id="@+id/co_btn_pending"
                android:layout_below="@+id/co_btn_new"
                android:layout_marginTop="25dp"/>

            <Button
                android:id="@+id/co_btn_confirmed"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/cd3"
                android:layout_below="@+id/co_btn_pending"
                android:layout_marginTop="25dp"/>

            <Button
                android:id="@+id/co_btn_edit_details"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/cd4"
                android:layout_below="@+id/co_btn_confirmed"
                android:layout_marginTop="25dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/cd5"
                android:id="@+id/btn_customer_logout"
                android:layout_below="@+id/co_btn_edit_details"
                android:layout_marginBottom="25dp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>