<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_display"
    android:background="@color/darkpurple">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/ad_tv"
        android:text="EXISTING ADMINS :- "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="25dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/ad_scv"
        android:layout_below="@+id/ad_tv"
        android:layout_above="@+id/btn_admin_master"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp">

    </ScrollView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/lv_admin_display"
        android:layout_below="@+id/ad_tv"
        android:layout_above="@+id/btn_admin_master"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/btn_admin_master"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/airforceblue"
        android:textColor="@color/amber"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="Login using master admin and password." />

</RelativeLayout>