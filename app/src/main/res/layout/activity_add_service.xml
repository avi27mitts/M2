<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_service"
    android:background="@color/darkpurple">


    <EditText
        android:id="@+id/et_new_service"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/imgadd_service"
        android:hint="Add new service here."
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="258dp" />

    <EditText
        android:id="@+id/et_salary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/et_new_service"
        android:hint="Enter salary here."
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="355dp" />

    <ImageView
        android:id="@+id/imgadd_service"
        android:layout_width="387dp"
        android:layout_height="225dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/salary"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="12dp" />

    <Button
        android:id="@+id/btn_add_serv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/et_salary"
        android:background="@color/airforceblue"
        android:textColor="@color/amber"
        android:textSize="20dp"
        android:text="Add "
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="482dp" />


</RelativeLayout>